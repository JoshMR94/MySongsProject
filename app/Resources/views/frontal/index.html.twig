{# Plantilla de mi aplicacion #}
{% extends 'base.html.twig' %}

{# Titulo #}
{% block title %}My Songs Project!{% endblock %}

{# Contenido #}
{% block content %}
<div class="container">
    {% block subtitle %}
    <h1 class="mt-4 mb-3">Index
        <small>A list of all the songs</small>
    </h1>
    {% endblock %}

    <div class="row justify-content-center align-items-center" style="height:60vh">
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <form action="" autocomplete="off">
                        <div class="form-group">
                            <label for="">Username</label>
                            <input type="text" class="form-control" name="username">
                        </div>
                        <div class="form-group">
                            <label for="">Password</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="button" id="sendlogin" class="btn btn-primary float-right">login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}